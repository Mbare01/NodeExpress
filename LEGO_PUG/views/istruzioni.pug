doctype html
html
 head
   title #{title}
   link(rel='stylesheet', href='/css/style.css')
   meta(name="viewport" content="width=device-width, initial-scale=1")
 body
   header.header
         h1 #{title}
   div.profile
     div.profile-image(style = `background: url('/public/images/${lego.ImgSrc}'); top center no repeat; background-size: cover;`)
     div.profile-details
       h1.profile-Set_Name
         Nome : #{l.Set_Name}
       h1.profile-Set_Year
         Anno : #{l.Set_Year}
       p.profile-Set_Theme
         Tema : #{l.Set_Theme}
       p.profile-Set_Number
         Numero : #{l.Set_Number}
